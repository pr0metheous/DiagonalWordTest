@{
    ViewData["Title"] = "Display Word";
    var word = ViewBag.Word as string;
}

<h3>Diagonal Word</h3>

<table>
    @if (!string.IsNullOrEmpty(word))
    {
        for (int i = 0; i < word.Length; i++)
        {
            <tr>
                @for (int j = 0; j < i; j++)
                {
                    <td>&nbsp;</td>
                }
                <td>@word[i]</td>
            </tr>
        }
    }
</table>

<h3>Reverse Diagonal Word</h3>

<table>
    @if (!string.IsNullOrEmpty(word))
    {
        for (int i = 0; i < word.Length; i++)
        {
            <tr>
                @for (int j = 0; j < word.Length - i - 1; j++)
                {
                    <td>&nbsp;</td>
                }
                <td>@word[i]</td>
            </tr>
        }
    }
</table>